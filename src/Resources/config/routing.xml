<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing
    http://symfony.com/schema/routing/routing-1.0.xsd">
    
    <route id="pmg_pheanstalk.list_tubes" path="/queue/tubes" methods="GET">
        <default key="_controller">pmg_pheanstalk.queue_controller:listTubes</default>
    </route>

    <route id="pmg_pheanstalk.stats_tube" path="/queue/{tube}" methods="GET">
        <default key="_controller">pmg_pheanstalk.queue_controller:statsTube</default>
    </route>

    <route id="pmg_pheanstalk.stats_tubes" path="/queue" methods="GET">
        <default key="_controller">pmg_pheanstalk.queue_controller:statsTubes</default>
    </route>
</routes>
