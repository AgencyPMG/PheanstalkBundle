<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="pmg_pheanstalk.stats_service" class="PMG\PheanstalkBundle\Service\PheanstalkStatsService" >
            <argument type="service" id="service_container" />
        </service>

        <service id="pmg_pheanstalk.abstract_controller" abstract="true" />
        <service id="pmg_pheanstalk.queue_controller" class="PMG\PheanstalkBundle\Controller\QueueController"
            parent="pmg_pheanstalk.abstract_controller" >
            <argument type="service" id="pmg_pheanstalk.stats_service" />
        </service>

    </services>
</container>
